<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#989797"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCenterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:text="@string/valCenterText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bLeft"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:padding="5pt"
            android:text="@string/valLeft"
            android:textColor="#F4F0F0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bRight"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:layout_weight="1"
            android:background="#F42D2D"
            android:padding="5pt"
            android:text="@string/valRight"
            android:textColor="#F1EDED"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tIdPlec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:textColor="#CEEDF1"
        android:textSize="24sp" />
</LinearLayout>